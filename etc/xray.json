{
    "inbounds": [
        {
            "listen": "/etc/caddy/vless", 
            "protocol": "vless", 
            "settings": {
                "clients": [
                    {
                        "id": "$UUID"
                    }
                ], 
                "decryption": "none"
            }, 
            "streamSettings": {
                "network": "ws", 
                "wsSettings": {
                    "path": "/xws"
                }
            }
        }
    ], 
    "outbounds": [
        {
            "protocol": "freedom"
        }
    ]
}
